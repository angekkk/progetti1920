<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:navigationIcon="@drawable/abc_vector_test"
                app:popupTheme="@style/AppTheme.AppBarOverlay" />

        </com.google.android.material.appbar.AppBarLayout>



        <ImageView
            android:id="@+id/img"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout4"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/alimentazione" />


    <TextView
        android:id="@+id/cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textColor="#5E5E5E"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/desc"
        app:layout_constraintTop_toBottomOf="@+id/img" />

    <EditText
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="6dp"
        android:background="@null"
        android:cursorVisible="false"
        android:editable="false"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc2" />

    <com.borjabravo.readmoretextview.ReadMoreTextView
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/cat"
        android:id="@+id/desc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="come strutturare un dieta sana e bilanciatacome strutturare un dieta sana e bilanciatacome strutturare un  bciatacome struttciatacome strutturare un dieta sana e bilanciatacome strutturare un dieta sana e bilanciata come strutturare un dieta sana e bilanciatacome strutturare un dieta sana e bilanciatacome strutturare un  bciatacome struttciatacome strutturare un dieta sana e bilanciatacome strutturare un dieta sana e bilanciata"
        android:textColor="#B55E5E5E"
        android:textSize="15dp"
        app:trimCollapsedText=" Show less"
        app:trimExpandedText=" Show more"
        app:trimLength="250"
        app:trimMode="trimModeLength"
        app:colorClickableText="@android:color/holo_blue_light" />


</androidx.constraintlayout.widget.ConstraintLayout>