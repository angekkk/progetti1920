<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/abc_vector_test"
            app:popupTheme="@style/AppTheme.AppBarOverlay" />


        <ImageView
            android:id="@+id/imgpass"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/img_camm" />

        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/imgpass"
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            >

        <TextView
            android:id="@+id/cat4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/passi1"
            android:textColor="#5E5E5E"
            android:textSize="25dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/cat6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/passi2"
            android:textColor="#CD5E5E5E"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            />

        <com.borjabravo.readmoretextview.ReadMoreTextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/passi3"
            android:textColor="#B55E5E5E"
            android:textSize="15dp"
            app:colorClickableText="@android:color/holo_blue_light"
            app:trimCollapsedText="@string/passi5"
            app:trimExpandedText="@string/passi4"
            app:trimLength="250"
            app:trimMode="trimModeLength"
            android:layout_marginBottom="10dp"
            />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp"
            android:background="#315E5E5E"
            />

        <TextView
            android:id="@+id/tx11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:text="@string/passi6"
            android:textColor="#5E5E5E"
            android:textSize="18dp"
            android:textStyle="bold"
            />

            <RelativeLayout
                android:layout_gravity="center"
                android:id="@+id/rela1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/card">

                <TextView
                    android:id="@+id/cat5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/passi7"
                    android:textColor="#ED5E5E5E"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:inputType="phone"
                    android:id="@+id/et1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginEnd="25dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/text3"
                    android:maxLength="5"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.735"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.856" />

                <EditText
                    android:inputType="phone"
                    android:id="@+id/et2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="25dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/text2"
                    android:maxLength="3"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.731"
                    app:layout_constraintStart_toStartOf="parent" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/setgoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et1"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="25dp"
                    android:text="@string/imposta"
                    app:cornerRadius="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintStart_toStartOf="parent" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:id="@+id/rela4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                >


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardgoal"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="30dp"
                    android:clickable="true"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.22000003">


                    <androidx.constraintlayout.widget.ConstraintLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/cardgoalfood"
                            android:layout_width="65dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/food"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/textView4"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:layout_marginBottom="10dp"
                            android:id="@+id/fact2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="170dp"
                            android:layout_toRightOf="@+id/cardgoalfood"
                            android:text="@string/food"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toTopOf="@+id/cardgoalfood"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.161" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/textView4"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/fact2"
                            android:layout_toRightOf="@+id/cardgoalfood"
                            android:gravity="center|left"
                            android:text="@string/cibo_txt"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginStart="31dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/cardgoal2"
                android:layout_width="300dp"
                android:layout_height="110dp"
                android:layout_below="@+id/cardgoal"
                android:clickable="true"
                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardgoal"
                app:layout_constraintVertical_bias="0.138">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/cardgoalsteps"
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/appintro4"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/textView5"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />



                    <TextView
                        android:layout_marginBottom="10dp"
                        android:id="@+id/fact1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="165dp"
                        android:layout_toRightOf="@+id/cardgoalsteps"
                        android:text="@string/text2"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toTopOf="@+id/cardgoalsteps"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.161" />



                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/textView5"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/fact1"
                        android:layout_toRightOf="@+id/cardgoalsteps"
                        android:gravity="center|left"
                        android:text="@string/passi_txt"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

                </RelativeLayout>






        </LinearLayout>








    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>